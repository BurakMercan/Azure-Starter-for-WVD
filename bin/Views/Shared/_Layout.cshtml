<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.4.1/css/bootstrap.min.css" crossorigin="anonymous">
    @if (MvcApplication.CustomCSS != "")
    {
        
        <link rel="stylesheet" href="@MvcApplication.CustomCSS" crossorigin="anonymous">
        <link href="~/Content/Site.css" rel="stylesheet" />
    }
</head>
<body>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.4.1/bootstrap.min.js" crossorigin="anonymous"></script>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (MvcApplication.CustomLogoUrl != "")
                {
                    <a href="/">
                        <img src="@MvcApplication.CustomLogoUrl" alt="@MvcApplication.CustomHeaderText" class="navbar-logo"/>
                    </a>
                }
                else
                {

                }
                @Html.ActionLink(@MvcApplication.CustomHeaderText, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (MvcApplication.CustomLogoUrl == "")
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    }

                    @if (MvcApplication.CustomIgnoreAboutAndContact != "1")
                    {
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            @if (MvcApplication.CustomIgnoreAboutAndContact != "1")
            {
                <p>&copy; @DateTime.Now.Year - Azure Starter for Windows Virtual Desktop - ITProCloud.de @Html.ActionLink("!", "VdiResetCachedSchema", "Data")</p>
            }
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
